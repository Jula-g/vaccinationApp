<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.managerecords.ManageRecordsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recordsRecyclerView"
        android:layout_width="374dp"
        android:layout_height="390dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="#DCE7E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editbtn"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#4FAEAF"
        android:fontFamily="@font/cherry_monospace_light"
        android:text="Edit"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordsRecyclerView" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF4FAEAF"
        android:fontFamily="@font/cherry_monospace_light"
        android:text="Add"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editbtn" />

    <Button
        android:id="@+id/deletebtn"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF4FAEAF"
        android:fontFamily="@font/cherry_monospace_light"
        android:text="Delete"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>