<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.history.HistoryFragment" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recordsHistoryRecycler"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addBTN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:backgroundTint="#4FAEAF"
        android:fontFamily="@font/neuropol_x_rg"
        android:text="add"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordsHistoryRecycler" />

    <Button
        android:id="@+id/editBTN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4FAEAF"
        android:fontFamily="@font/neuropol_x_rg"
        android:text="edit"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/deleteBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBTN" />

    <Button
        android:id="@+id/deleteBTN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#4FAEAF"
        android:fontFamily="@font/neuropol_x_rg"
        android:text="delete"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editBTN" />

    <Button
        android:id="@+id/changeBTN"
        android:layout_width="136dp"
        android:layout_height="83dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="104dp"
        android:backgroundTint="#4FAEAF"
        android:fontFamily="@font/neuropol_x_rg"
        android:gravity="center"
        android:text="Sort"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addBTN"
        app:layout_constraintTop_toBottomOf="@+id/recordsHistoryRecycler" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="369dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="#FF8A7A"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Please remember that the next dose date is a suggestion, please schedule the appointment!"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>