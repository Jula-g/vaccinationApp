<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.schedule.ScheduleActivity">

    <Spinner
        android:id="@+id/vaccineType"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:layout_marginTop="84dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/neuropol_x_rg"
        android:text="Date"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vaccineType" />

    <!-- Calendar View -->
    <com.google.android.material.datepicker.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Recycler View for each day -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    <!-- RecyclerView for Sunday -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Sunday" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSunday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- RecyclerView for Monday -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Monday" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMonday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- RecyclerViews for Tuesday-->

</androidx.constraintlayout.widget.ConstraintLayout>